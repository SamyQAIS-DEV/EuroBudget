{% use "bootstrap_4_layout.html.twig" %}

{% block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="form-error">
            {%- for error in errors -%}
                <p>{{ error.message }}</p>
            {%- endfor -%}
        </div>
    {%- endif %}
{%- endblock form_errors %}