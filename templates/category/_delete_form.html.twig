<form method="post" action="{{ path('categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn-error" title="Supprimer la catégorie">
        {{ icon('trash') }}
    </button>
</form>
