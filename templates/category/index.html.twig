{% extends 'base.html.twig' %}

{% block title 'Toutes vos catégories' %}

{% block body %}
    <div class="container py5">
        <h1>Toutes vos catégories</h1>

        <section id="category-list">
            <a href="{{ path('categories_new') }}" class="btn-primary mb1">
                {{ icon('edit') }}<span>Créer une catégorie</span>
            </a>
            <p><strong>{{ categories|length }}</strong> catégorie{{ categories|length > 1 ? 's' : '' }}</p>
            <div class="categories list-group p0">
                {% for category in categories %}
                    {% include 'category/_category.html.twig' %}
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}
