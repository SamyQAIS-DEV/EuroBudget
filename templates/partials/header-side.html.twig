<ul class="header-side">
    <li class="header__notification">
        {{ icon('bell') }} <span>{{ 'Notifications'|trans }}</span>
    </li>
    <li class="header__search">
        {{ icon('search') }} <span>{{ 'Search'|trans }}</span>
    </li>
    {% if app.user %}
        <li class="header__account">
            <a href="#" title="{{ 'Profile'|trans }}" {{ menu_active('profile') }}>
                {{ icon('user') }} <span>{{ app.user.userIdentifier }}</span>
            </a>
        </li>
          <li class="header__logout">
              <a href="{{ path('auth_logout') }}" title="{{ 'Logout'|trans }}" data-turbolinks="false">
                  {{ icon('log-out') }} <span>{{ 'Logout'|trans }}</span>
              </a>
          </li>
    {% else %}
        <li class="header-side__auth">
            <a href="{{ path('auth_register') }}" title="{{ 'Registration'|trans }}" {{ menu_active('registration') }}>
                {{ icon('log-in') }} <span>{{ 'Registration'|trans }}</span>
            </a>
            <span class="text-muted">Â·</span>
            <a href="{{ path('auth_login', {redirect: app.request.pathInfo}) }}" title="{{ 'Login'|trans }}" {{ menu_active('login') }}>
                <span>{{ 'Login'|trans }}</span>
            </a>
        </li>
    {% endif %}
</ul>
